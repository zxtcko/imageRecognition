<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.dhu.figures">

    <uses-permission android:name="android.permission.CAMERA" />
    //调用照相机的权限
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    //读写卡的权限
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    //访问网络权限
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MeasureFragment"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.ActionBar"></activity>
        <activity
            android:name=".DrawViewActivity"
            android:label="@string/title_activity_draw_view"
            android:parentActivityName=".MeasureFragment"
            android:theme="@style/AppTheme.ActionBar" />
        <activity
            android:name=".ResultFragment"
            android:label="@string/title_activity_result"
            android:parentActivityName=".MeasureFragment"
            android:theme="@style/AppTheme.ActionBar" />
        <!-- android:parentActivityName=".MeasureFragment" -->
        <activity
            android:name=".ImageCropActivity"
            android:label="@string/title_activity_image_crop"
            android:parentActivityName=".MeasureFragment"
            android:theme="@style/AppTheme.NoActionBar">

            <!-- android:parentActivityName=".MeasureFragment" -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MeasureFragment" />
        </activity>
        <!--
 ATTENTION: This was auto-generated to add Google Play services to your project for
     App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <!-- <activity -->
        <!-- android:name=".MainActivity" -->
        <!-- android:label="@string/title_activity_main" -->
        <!-- android:theme="@style/AppTheme.NoActionBar"></activity> -->
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.edu.dhu.figures.MainActivity" />
        </activity>
    </application>

</manifest>
