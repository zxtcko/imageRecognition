<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/id_tab_line"
        android:layout_width="127dp"
        android:layout_height="3dp"
        android:background="@drawable/tabline"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_tabbar"
        android:orientation="horizontal"
        android:background="@color/crMainTabBTN"
        >

        <!--android:background="@drawable/selector_button"-->
        <LinearLayout
            android:id="@+id/id_tab1_chat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_measure"
                />

            <TextView
                android:id="@+id/id_chat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="测量"
                android:textColor="@color/gray"
                android:textSize="@dimen/main_tab_text_size" />
        </LinearLayout>

        <!--android:background="@drawable/selector_button"-->

        <LinearLayout
            android:id="@+id/id_tab2_found"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_sizes"
            />

            <TextView
                android:id="@+id/id_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="尺寸"
                android:textColor="@color/white"
                android:textSize="@dimen/main_tab_text_size" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/id_tab3_contact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_bodytype"
                />

            <TextView
                android:id="@+id/id_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="体型"
                android:textColor="@color/white"
                android:textSize="@dimen/main_tab_text_size" />
        </LinearLayout>

<!--        <LinearLayout
            android:id="@+id/id_tab4_shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="5dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_shopping2"
                />

            <TextView
                android:id="@+id/id_contact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="购物"
                android:textColor="@color/white"
                android:textSize="@dimen/main_tab_text_size" />
        </LinearLayout>-->
    </LinearLayout>

</LinearLayout>